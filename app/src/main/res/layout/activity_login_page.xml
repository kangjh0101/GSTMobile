    <ImageButton
        android:id="@+id/login"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:adjustViewBounds="true"
        android:background="#F4BD27"
        android:scaleType="fitCenter"
        android:scaleX="1"
        android:scaleY="1"
        android:src="@drawable/login_note_2440x1080px_r244_g189_b39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <ImageButton
        android:id="@+id/register"
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="24dp"
        android:adjustViewBounds="true"
        android:background="#F4BD27"
        android:scaleType="fitCenter"
        android:scaleX="0.7"
        android:scaleY="0.5"
        android:src="@drawable/register_note_2440x1080px_r244_g189_b39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login" />

    <ImageButton
        android:id="@+id/find_idpd"
        android:layout_width="333dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:adjustViewBounds="true"
        android:background="#F4BD27"
        android:scaleType="fitCenter"
        android:scaleX="0.6"
        android:scaleY="0.4"
        android:src="@drawable/id_pw_note_2440x1080px_r244_g189_b39"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register" />

